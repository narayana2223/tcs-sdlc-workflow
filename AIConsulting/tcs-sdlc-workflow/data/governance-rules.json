  "aiDecisionFramework": {
    "confidenceThresholds": {
      "autoApprove": 85,
      "humanReview": 50,
      "reject": 30
    },
    "escalationPaths": {
      "low_confidence": {
        "threshold": 50,
        "action": "escalate",
        "escalateTo": "senior_developer",
        "sla": "30 minutes"
      },
      "security_risk": {
        "threshold": "any",
        "action": "escalate",
        "escalateTo": "security_team",
        "sla": "1 hour"
      },
      "architectural_impact": {
        "threshold": "any",
        "action": "escalate",
        "escalateTo": "architect",
        "sla": "2 hours"
      },
      "compliance_violation": {
        "threshold": "any",
        "action": "block",
        "escalateTo": "compliance_officer",
        "sla": "immediate"
      }
    },
    "overrideRules": {
      "emergency_fix": {
        "allowedRoles": ["CTO", "VP Engineering"],
        "requiresJustification": true,
        "auditLevel": "critical"
      },
      "security_patch": {
        "allowedRoles": ["Security Team", "DevOps"],
        "requiresJustification": true,
        "auditLevel": "high"
      }
    }
  },

# Environment Configuration
# Copy this file to .env and configure your values

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=flight_disruption
POSTGRES_USER=flight_user
POSTGRES_PASSWORD=secure_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181

# API Configuration
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Service Ports
DISRUPTION_PREDICTOR_PORT=8001
PASSENGER_MANAGEMENT_PORT=8002
COST_OPTIMIZER_PORT=8003
COMPLIANCE_SERVICE_PORT=8004
NOTIFICATION_SERVICE_PORT=8005

# External APIs
WEATHER_API_KEY=your_weather_api_key
FLIGHT_DATA_API_KEY=your_flight_data_api_key
HOTEL_BOOKING_API_KEY=your_hotel_api_key
SMS_PROVIDER_API_KEY=your_sms_api_key
EMAIL_PROVIDER_API_KEY=your_email_api_key

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langchain_api_key

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_password
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# EU261 Compliance
EU261_COMPENSATION_RATES_URL=https://api.eu261.com/rates
EU261_DELAY_THRESHOLD_MINUTES=180
EU261_CANCELLATION_NOTICE_HOURS=14

# Airlines Integration
AIRLINE_PSS_SYSTEMS=amadeus,sabre,travelport
AMADEUS_API_KEY=your_amadeus_key
SABRE_API_KEY=your_sabre_key
TRAVELPORT_API_KEY=your_travelport_key

# Performance Tuning
MAX_CONCURRENT_REQUESTS=1000
WORKER_PROCESSES=4
CACHE_TTL_SECONDS=300
RATE_LIMIT_PER_MINUTE=1000